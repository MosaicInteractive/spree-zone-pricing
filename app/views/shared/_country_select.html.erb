<% form_tag :controller => 'countries', :action => 'set' do %>
  <%= label_tag t('country')  %>
  <%= select_tag 'id',
    options_for_select(Country.order_by_name.collect{ |c| [c.name, c.id] }, get_user_country_id),
     :onchange => "this.form.submit();" %>
  <%= content_tag(:noscript, submit_tag(t('change'))) %>
<% end %>