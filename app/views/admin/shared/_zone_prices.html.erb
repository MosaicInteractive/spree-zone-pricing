<table class="index">
  <thead>
    <tr>
      <th><%= t("zone") %></th>
      <th><%= t("price") %></th>
    </tr>
  </thead>
  <tbody id="zone_prices">
    <% for zone in Zone.all %>
      <tr>
        <td>
          <%= zone.name %>
        </td>
        <td>
          <%= text_field_tag "variant[zone_price_attributes][#{zone.id}][price]", zone.zone_prices.find_by_variant_id(@variant.id).try(:price) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
